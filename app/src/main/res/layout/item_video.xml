<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/im_nguoidung"
            android:layout_width="83dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_person_pin"
            android:padding="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="16dp"
                    android:text="DDau ."
                    android:textSize="23dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_theodoi"
                    android:layout_width="124dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="91dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/tv_name"
                    android:background="#CC3B0D"
                    android:text="Theo dõi"
                    android:textColor="#fff"
                    android:textSize="16dp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_thoigian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Hôm qua lúc 17:15"
                    android:textSize="15dp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="458dp"
        android:padding="16dp"
        android:src="@drawable/riviu" />

    <LinearLayout
        android:layout_width="401dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="186dp"
            android:layout_height="45dp">

            <TextView
                android:id="@+id/tv_like"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/btn_like"
                android:paddingTop="5dp"
                android:text="5"
                android:textSize="30dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_like"
                android:layout_width="44dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_baseline_favorite_24"
                android:padding="8dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="45dp">

            <TextView
                android:id="@+id/tv_binhluan"
                android:layout_width="27dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/btn_binhluan"
                android:paddingTop="5dp"
                android:text="5"
                android:textSize="30dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_binhluan"
                android:layout_width="44dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_comment"
                android:padding="8dp" />

        </RelativeLayout>

        <Button
            android:id="@+id/btn_luu"
            android:layout_width="46dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_save"
            android:padding="8dp" />

        <Button
            android:drawablePadding="8dp"
            android:id="@+id/btn_share"
            android:layout_width="46dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_share"
            android:padding="8dp" />

    </LinearLayout>
    <TextView
        android:text="Mô tả của bài viết"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>